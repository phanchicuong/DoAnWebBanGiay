                    <a style="padding-left:250px" href="/home/Trangchu"> <img style="width:100px" src="~/Hinh/logo1.png" /></a>
                </div>
                <div class="col-7">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a style="color:white" class="nav-link" href="/home/Trangchu">Trang Chủ </a>
                        </li>

                        <li class="nav-item">
                            <a style="color:white" class="nav-link" href="/home/Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="/acount/detail/@User.Identity.Name">
                                    <div class="text-danger">
                                        @User.Identity.Name
                                    </div>
                                </a>
                                <a class="text-danger" href="/account/LogOut">Đăng XUất</a>
                            }
                            else
                            {
                                <a href="/account/login" >
