                        </li>
                        <li class="nav-item">
                            <a style="color:white" class="nav-link" href="/GioHang/index"> <img src="~/hinh/cart-download-regular-24.png" /> </a>
                        </li>
                        <li>
                            <form class="d-flex form-inline flex-row  flex-wrap"
                                  action="/home/index">
                                <input type="search"
                                       class="from-control w-auto"
                                       id="search"
                                       name="search"
                                       value="@ViewBag.search"
                                       placeholder="Tìm Kiếm" />
                                <button style="color:white" type="submit" class="btn btn-outline-dark mx-2">Tìm</button>
                            </form>

                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="text-center p-2">
            @RenderBody()
        </div>
        <div style="text-align:center">
            <img src="~/Hinh/1last.png" />
        </div>
